        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"></ColumnDefinition>
            <ColumnDefinition Width="162*"></ColumnDefinition>
            <ColumnDefinition Width="17*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="0,62,0,0" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Width="252" Height="33" VerticalAlignment="Top" Grid.RowSpan="2" >Вы уверены, что хотите выйти?</TextBlock>
        <Button Content="Да!" Grid.Row="1" RenderTransformOrigin="1.404,0.529" Grid.Column="1" Click="YesButtonClick" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="103" Margin="0,0,194,47"/>
